<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
  <persistence-unit name="tutoring-persistence-unit">
    <class>jpa.study.loading.Member</class>
    <class>jpa.study.loading.Team</class>
    <class>jpa.study.cascade.Parent</class>
    <class>jpa.study.cascade.Child</class>

    <properties>
      <!-- JPA 표준 속성 -->
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/test"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>

      <!-- Hibernate 전용 속성 -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.use_sql_comments" value="true"/>
      <property name="log4j.logger.org.hibernate.type" value="trace"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>  <!-- DDL-->
    </properties>
  </persistence-unit>
</persistence>